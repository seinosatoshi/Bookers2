<div class="body">
	<div class="col-md-6 col-md-offset-3">
	<h1>Editing Book</h1>
	<!-- form_for部分 -->
	<%= form_for(@book) do |f| %>
	  <h4>Title</h4>
	  <%= f.text_field :title, class: "col-xs-12" %>
	  
	  <h4>Opinion</h4>
	  <%= f.text_area :body, class: "col-xs-12" %>
	  <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
	<% end %>
	<%= link_to "Show", book_path %>
	<%= link_to "Back", books_path %>
</div>