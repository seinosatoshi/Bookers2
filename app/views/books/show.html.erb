

<div class="body">
	<p><%= flash[:notice] %></p>
<div class="container">
	<div class="row">
   	  <div class="col-xs-3">
		<h3>User info</h3>
		<table class="table table-striped">
			<thead>
				<tr>
				<%= attachment_image_tag current_user, :profile_image, :fill,100,100, format: "jpeg", class: "attachment user profile_image", fallback: "no_image.jpg" %>
				</tr>
				<body>
			    <tr>
					<td>name</td>
					<td><%= @user.name %></td>
				</tr>
				<tr>
		            <td>introduction</td>
		            <td><%= current_user.introduction %></td>
		        </tr>
		        </body>
		    </thead>
		</table>
		       <% if current_user.id == @user.id %>
		         <%= link_to edit_user_path(current_user.id) do %>
		           <span class="fa fa-search glyphicon glyphicon-wrench btn btn-default col-xs-12"></span>
		          <% end %>
		        <% else %>
		          <%= link_to user_path(current_user.id) do %>
		          <span class="fa fa-search glyphicon glyphicon-wrench btn btn-default col-xs-12"></span>
		         <% end %>
		        <% end %>


		  <h1>New book</h1>
		<!-- form_for部分 -->
		<%= form_for(@new_book) do |f| %>
		 <% if @new_book.errors.any? %>
		 <% end %>
		 
		  <h4>Title</h4>
		  <%= f.text_field :title, class: "col-xs-12" %>
		 
		  <h4>Opinion</h4>
		  <%= f.text_area :body, class: "col-xs-12" %>
		 
		  <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
		 
		<% end %>
	   </div>

		  <div class="col-xs-9">
			<h3>Book detail</h3>
                <table class="table table-striped">
                 <tbody>
                 	<tr>
                 		<td><%= link_to user_path(@book.user) do %>
		                <%= attachment_image_tag @book.user, :profile_image, :fill,40,40, format: "jpeg", class: "attachment user profile_image", fallback: "no_image.jpg" %>
		              	<%= @user.name %>
		              <% end %>
		              </td>
                 		<td>
					      <h3 class="book-box-headline">
					        <%= link_to @book.title, book_path(@book.id) %>
					      </h3>
					    </td>
					    <td>
					      <h3 class="book-box-headline">
					        <%= @book.body %>
					      </h3>
					    </td>
					    
					      <% if current_user == @book.user %>
					      <td>
					      <%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success" %>
					      </td>
					      <td>
					      <%= link_to "Destroy", book_path(@book), method: :delete ,"data-confirm" => "本当に消しますか？", class: "btn-sm btn-danger" %>
					      </td>
					      <% end %>
					  </tr>
					</tbody>
			  </table>
         </div>
	</div>
</div>
</div>
