<div class="body">
<h2>Follower Users</h2>
  <table class="table table-striped">
	<thead>
		<tr>
		   <th>image</th>
		   <th>name</th>
		   <th></th>
		</tr>
	</thead>
	<% @user.follower_user.each do |user| %>
	  <% if @user.follower_user.count > 0 %>
	  <tr>
	    <td>
		    <%= attachment_image_tag user, :profile_image, :fill,100,100, format: "jpeg", class: "attachment user profile_image", fallback: "no_image.jpg" %>
		</td>
		<td>
	    <%= user.name %>
	    </td>
	    <td>
	    	フォロー数：<%= user.follower.count %>
		</td>
		<td>
		   	フォロワー数：<%= user.followed.count %>
		</td>
		<td>
		    <%= link_to "Show", user_path(user.id) %>
		</td>
	  </tr>
	  <% else %>
	    <p>ユーザーはいません</p>
	  <% end %>
    <% end %>
  </table>
</div>