<!DOCTYPE html>
<html>
  <head>
    <title>Book</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>


  <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <a class="navbar-logo" href="/">
              <%= image_tag('logo.png') %>
            </a>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
              <% if user_signed_in? %>
                <li class="">
                  <%= link_to "Home", destroy_user_session_path, method: :delete %>
                </li>
                <li class="">
                  <%= link_to 'Users', new_post_image_path %>
                </li>
                <li class="">
                  <%= link_to 'Books', user_path(current_user.id) %>
                </li>
                <li class="">
                  <%= link_to 'logout', new_post_image_path %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to "Home", new_user_registration_path %>
                </li>
                <li class="">
                  <%= link_to "About", new_user_session_path %>
                </li>
                <li class="">
                  <%= link_to 'sign up', new_post_image_path %>
                </li>
                <li class="">
                  <%= link_to 'login', new_post_image_path %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </div>

    <%= yield %>
</html>
